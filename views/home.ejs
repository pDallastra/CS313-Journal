<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <title>Daily Journal</title>
  <meta charset="utf-8">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
  <!-- NAVBAR -->
  <nav>
    <div class="brand-pos">
      <a class="brand-text flex" href="/home">Web Journal</a>
    </div>
    <div class="flex">
      <a class="logout flex center" role="button" href="/logout">Logout</a>
    </div>
  </nav>
  <!-- MAIN CONTAINER -->
  <div class="all-container flex col">
    <!-- CONTENT CONTAINER -->
    <section class="container-main flex center col">
      <h1 class="flex center">Your Records</h1><br>
      <a id="createNew" class="createNew flex center" role="button" style="margin-bottom: 2rem;" onclick="post()">Create
        New</a>
      <div id="newPost" class="newPost">
        <div class="postForm flex col text-center">
          <form action="/submit" method="post">
            <label>Title</label><br>
            <input type="text" name="title" id="title" required
              style="height: 3rem; width: 50rem; font-size: 16px; margin: 2rem 0;"><br>
            <label>Content</label><br>
            <input type="text" name="content" id="content" required
              style="height: 20rem; width: 50rem; text-align: left; font-size: 16px; margin: 2rem 0;">
            <div class="flex row">
              <button class="createNew" type="submit" style="margin-bottom: 1rem;">Submit</button>
            </div>
        </div>
        </form>
        <button class="cancelPost" role="button"onclick="cancel()">Cancel</button>
        <hr>
      </div>
      <div class="posts flex col">
        <%  posts.reverse().forEach(function(post){ %>
        <h2 class="flex"><%=post.title%></h2>
        <p><%=post.content.substring(0, 300) + " ..."%></p>
        <form action="/delete" method="post">
          <button name="deleteItem" value="<%=post._id%>" href="/delete">delete</button>
        </form>
        <% }) %>
      </div>
    </section>
  </div>
  <footer>
    <h3 class="flex center no-margin">Paulo Dallastra</h3>
  </footer>
  <script>
    function post() {
      var displayPost = document.getElementById('newPost').style.display = "flex"
    }

    function cancel() {
      var displayPost = document.getElementById('newPost').style.display = "none"
    }
  </script>
</body>

</html>